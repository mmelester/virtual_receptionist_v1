<%- include('../includes/header') %>

<div class="page">
    <h1 class="pt-md-5 pb-md-5 text-center">Admin Dashboard</h1>

    <% if (errors && errors.length > 0) { %>
        <div class="alert alert-danger">
            <ul>
                <% errors.forEach(function(error) { %>
                    <li><%= error %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>

    <% if (success && success.length > 0) { %>
        <div class="alert alert-success">
            <%= success %>
        </div>
    <% } %>

    <!-- <p>Total Companies: <%= stats.companyCount %></p> -->

    <div class="admin-btn-container">
        <a href="/admin/companies" class="btn-companies-staff btn btn-primary btn-sm">
            Companies/Staff
        </a>
        <a href="/admin/notifications" class="btn-companies-staff btn btn-primary btn-sm">
            Notifications
        </a>
        <a href="/admin/users" class="btn-companies-staff btn btn-primary btn-sm">
            User Credentials
        </a>
    </div>
    <section class="add-company-container border pt-3 pb-5  pl-5 pr-5 rounded mt-5 mb-5 bg-light">
        <div class="d-flex add-building-flex-container align-items-center justify-content-lg-between mt-5">
            <div class="info">
                <form id="buildingForm">
                    <div class="form-group">
                        <label for="buildingName">Building Name (up to 50 characters):</label>
                        <input
                            type="text"
                            id="buildingName"
                            name="buildingName"
                            maxlength="50"
                            value="<%= building && building.name ? building.name : '' %>"
                            required
                        >
                    </div>
                    <div class="form-group">
                        <label for="introText">Intro Text (up to 160 characters):</label>
                        <textarea
                            id="buildingIntroText"
                            name="introText"
                            maxlength="160"
                            required
                        ><%= building && building.intro ? building.intro : '' %></textarea>
                    </div>
                </form>

            </div>
    
    
            <div class="drop-area">
                <div class="form-container <%= building && building.image ? 'hidden' : '' %>">
                    <form class="upload-form">
                        <p>Drag and drop an image here</p>
                        <input type="file" class="file-element" accept="image/*" style="display:none" onchange="handleFiles(this.files)">
                        <button type="button" class="btn btn-primary btn-sm file-select">Add Logo</button>
                    </form>
                </div>
                
                
                <div class="canvas-container <%= building && building.image ? '' : 'hidden' %>">
                    <!-- <% if (building && building.image) { %>
                        <img src="<%= building.image %>" alt="Building Logo" id="buildingLogoPreview" />
                    <% } else {%>  -->
                    <canvas id="canvas" class="canvas" width="450" height="500"></canvas> <% } %>
                    <button class="delete">
                        <i class="delete-image-btn fa fa-trash" aria-hidden="true"></i>
                    </button>      

                </div>
    
            </div>
         
        </div>
    
        <div id="buildingPage" class="text-center">
            <button id="save-building-logo" class="save-img-btn btn btn-primary btn-sm pr-4 pl-4 pt-2 pb-2">Save</button>
        </div> 
    </section>
    
</div>

<%- include('../includes/footer') %>
