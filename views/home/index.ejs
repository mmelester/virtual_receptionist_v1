       <%- include('../includes/header') %> 
        <div class="page">
            <% flashErrors = flash('errors')
            if (flashErrors.length) { %>
                <div class="alert alert-danger">
                  <% flashErrors.forEach(function(error) { %>
                    <p><%= error %></p>
                  <% }); %>
                </div>
              <% } %>
              
              <% if (flash('success').length) { %>
                <div class="alert alert-success">
                  <% flash('success').forEach(function(message) { %>
                    <p><%= message %></p>
                  <% }); %>
                </div>
              <% } %>
              
            <section class="page-intro-section">
                <img src="/images/logo.png" width="200" height="200" alt="building logo">
                <h1>Hi I'm Vivi, Your Virtual Receptionist</h1>
            </section>
            <section class="companies-section">
                <div class="flex-container">
                    <% if (companies.length > 0) { %>
                        <% companies.forEach(company => { %>
                            <div class="flex-col-container">
                                <img 
                                  class="logo"
                                  src="<%= company.image %>" 
                                  alt="<%= company.name %> logo" 
                                  idth="auto" 
                                  height="125px"/>
                             
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p>No companies available.</p>
                    <% } %>
                </div>
                <% if (error) { %>
                    <p style="color: red;"><%= error %></p>
                <% } %>  
            </section>
            

        </div>
        
    <%- include('../includes/footer') %>